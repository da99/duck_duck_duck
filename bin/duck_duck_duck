#!/usr/bin/env ruby
#


require 'duck_duck_duck'

case ARGV[0]

when 'create'
  name = ARGV[1]
  if !name
    puts "No name."
    exit 1
  end

  action = ARGV[2]
  if !action
    puts "No action."
    exit 1
  end

  sub_action = ARGV[3]

  Duck_Duck_Duck.create name, action, sub_action
else
  fail "Unknown cmd: #{ARGV[0]}"
end



